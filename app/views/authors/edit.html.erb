<%= form_with(model: @author, local: true) do |form| %>
  <div><%= form.label :name, "Ім'я" %><%= form.text_field :name %></div>

  <div>
    <%= form.label :email_address, "Пошта" %>
    <%= form.text_field :email_address %>
  </div>

  <div><%= form.label :code, "ІПН", "Code" %><%= form.text_field :code %></div>

  <%= form.submit %>
<% end %>
