<%= form_with model: @document, local: true do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
  <div>
    <%= form.label :author_id, "Автор" %>
    <%= form.collection_select :author_id,
                           Author.all,
                           :id,
                           :name,
                           include_blank: "Выберите автора" %>
  </div>
  <div>
    <%= form.label :status %>
    <%= form.select :status,
                Document.statuses.keys.map { |s| [Document::STATUS_LABELS[s], s] } %>
  </div>
  <%= form.submit "Обновить документ" %>
<% end %>
