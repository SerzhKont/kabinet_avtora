<nav class="pagination" role="navigation" aria-label="Pagination">
  <%= link_to "Попередня", pagy_url_for(pagy, pagy.prev), class: "pagination-previous #{'is-disabled' unless pagy.prev}" %>
  <%= link_to "Наступна", pagy_url_for(pagy, pagy.next), class: "pagination-next #{'is-disabled' unless pagy.next}" %>
  <ul class="pagination-list">
    <% pagy.series.each do |item| %>
      <li>
        <% if item == :gap %>
          <span class="pagination-ellipsis">&hellip;</span>
        <% elsif item == pagy.page.to_s %>
          <a class="pagination-link is-current" href="#"><%= item %></a>
        <% else %>
          <%= link_to item, pagy_url_for(pagy, item), class: 'pagination-link' %>
        <% end %>
      </li>
    <% end %>
  </ul>
</nav>
